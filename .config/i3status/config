general {
		output_format = "i3bar"
		colors = true
		interval = 5
		separator = '|'
}

order += "volume master"
order += "ethernet eth0"
order += "wireless wlp0s20f3"
order += "battery 0"
order += "tztime local"

wireless wlp0s20f3 {
		format_up = "W: (%quality at %essid, %bitrate) %ip"
		format_down = "W: down"
}

ethernet eth0 {
		format_up = "E: %ip (%speed)"
		format_down = "E: down"
}

battery 0 {
		format = "%status %percentage REM %remaining TIM %emptytime"
		format_down = "No battery"
		status_chr = "âš¡ CHR"
		status_bat = "ðŸ”‹ BAT"
		status_unk = "? UNK"
		status_full = "â˜» FULL"
		path = "/sys/class/power_supply/BAT%d/uevent"
		low_threshold = 10
}

tztime local {
		format = "ðŸ•‘  %Y-%m-%d %H:%M:%S"
        align = "center"
}

load {
		format = "%5min"
}

volume master {
        format = "ðŸ”Š : %volume"
        format_muted = "ðŸ•¨ : muted (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
